/* pages/road/road.wxss */
.header{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  
}
.header image {
  width: 150rpx;
  height: 150rpx;
  border-radius:10%;
  margin-left:15rpx;
}
.header a{
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left:15rpx;
}
.header a text:nth-of-type(1){
  font-size:35rpx;
  margin-bottom: 10rpx;
}
.img{
  margin-left: 165rpx;
}
.img image{
  padding: 0 4rpx;
  width: 180rpx;
  height: 200rpx;
}
.footer{
  margin-left: 165rpx;
}
.footer a{
  display: flex;
  flex-direction: column;
}
.footer a span:nth-of-type(2){
  margin-top: 15rpx;
  margin-bottom: 5rpx;
}
.hr{
  width: 100%;
  border: 1rpx solid #ccc;
}

navigator image{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}